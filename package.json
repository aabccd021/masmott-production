{
  "name": "simple-form",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "14"
  },
  "main": "server.js",
  "scripts": {
    "lint": "eslint ./ --ext ts,tsx",
    "server:build": "rm -rf .functions && tsc --project tsconfig.functions.json",
    "server:dev:cached": "firebase emulators:start",
    "server:dev": "yarn server:build && yarn server:dev:cached",
    "client:dev": "next dev",
    "client:build": "rm -rf .next && next build",
    "client:start": "next start"
  },
  "dependencies": {
    "firebase-admin": "^10.0.0",
    "firebase-functions": "^3.15.7",
    "firebase": "^9.1.3",
    "next": "11.1.2",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "swr": "^1.0.1"
  },
  "devDependencies": {
    "@types/react": "17.0.31",
    "eslint": "^7.32.0",
    "typescript": "4.4.4"
  }
}